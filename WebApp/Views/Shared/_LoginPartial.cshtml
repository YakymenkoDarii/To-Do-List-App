<ul class="navbar-nav">
	@if (User.Identity != null && User.Identity.IsAuthenticated)
	{
		<li class="nav-item">
			@* This reads the ClaimTypes.Name you added in your AccountController *@
			<span class="nav-link text-dark">Hello @User.Identity.Name!</span>
		</li>
		<li class="nav-item">
			@* This form posts directly to your AccountController's Logout action *@
			<form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			@* This links to your AccountController's Register action *@
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
		</li>
		<li class="nav-item">
			@* This links to your AccountController's Login action *@
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Sign In</a>
		</li>
	}
</ul>